<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="SM_SumUp::blog" title="Manage Blog" sortOrder="25">
                        <resource id="SM_SumUp::post" title="Posts" sortOrder="10"/>
                        <resource id="SM_SumUp::tag" title="Tags" sortOrder="20"/>
                        <resource id="SM_SumUp::category" title="Categories" sortOrder="30"/>
                        <resource id="SM_SumUp::author" title="Author Information" sortOrder="40"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
