<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="sumup_dafault"/>
        <head>
            <css src="SM_SumUp::css/owl.carousel.css"/>
            <css src="SM_SumUp::css/owl.theme.css"/>
            <css src="SM_SumUp::css/owl.transitions.css"/>
            <css src="SM_SumUp::css/fancybox/jquery.fancybox.css"/>
            <css src="SM_SumUp::css/font-awesome.min.css"/>
        </head>
    <body>

        <referenceContainer name="content">
            <block class="SM\SumUp\Block\Post\View" name="mpblog.post.view" template="Post/view.phtml" cacheable="false">
                <block class="SM\SumUp\Block\Post\RelatedProduct" name="related.category.products" as="related_products" template="product/list.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
