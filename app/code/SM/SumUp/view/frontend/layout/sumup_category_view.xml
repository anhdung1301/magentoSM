
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="mpblog_design"/>
    <body>
        <referenceContainer name="content">
            <block class="SM\SumUp\Block\Category\Listpost" name="sumup.category.post.list" template="SM_SumUp::Post/list.phtml"/>
            <referenceBlock name="catalog.leftnav" remove="true"/>
        </referenceContainer>
        <referenceContainer name="columns">
            <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar sidebar-main" before="-" >
                <container name="blog.sidebar.main" as="sidebar_main" label="Sidebar Main">
                    <block class="SM\SumUp\Block\Sidebar\Search" name="sumup.sidebar.search" template="sidebar/search.phtml"/>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>
